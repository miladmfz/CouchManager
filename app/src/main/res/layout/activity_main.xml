<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/PrefactorActivity_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/PrefactorActivity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                app:titleTextColor="@color/white"
                android:background="?attr/colorPrimary"
                android:layout_gravity="center"

                app:title="FitByKave">

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <Button

                android:id="@+id/main_allperson"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:textColor="@color/grey_1000"
                android:textSize="42sp"
                android:text="لیست شاگردان"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/green_100"
                app:rippleColor="@color/deep_purple_300"

                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/main_workoutplanlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="24sp"
                    android:text="برنامه ورزشی"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/main_workoutlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="30sp"
                    android:text="حرکات"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/main_foodplanlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="24sp"
                    android:text="برنامه غذایی"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/main_foodlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="30sp"
                    android:text="غذاها"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_complementplanlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="24sp"
                    android:text="برنامه مکمل"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/main_complementlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/grey_1000"
                    android:textSize="30sp"
                    android:text="مکمل"
                    app:strokeColor="@color/grey_1000"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/green_100"
                    app:rippleColor="@color/deep_purple_300"
                    android:layout_weight="0.5"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button

                android:id="@+id/main_createplan"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:textColor="@color/grey_1000"
                android:textSize="30sp"
                android:text="ایجاد برنامه"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/green_100"
                app:rippleColor="@color/deep_purple_300"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>